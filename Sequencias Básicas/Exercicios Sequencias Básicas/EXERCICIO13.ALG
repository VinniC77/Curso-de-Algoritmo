algoritmo "Exercicio13"
var
   sal, aum, nsal: real
inicio
      Escreval ("Qual é o seu salário mensal? ")
      Escreva ("RS")
      Leia (sal)
      aum <- sal * 0.15
      nsal <- sal + aum
      Escreva ("Você ganhou 15% de aumento de salário e no mês que vem seu salário passa de R$", sal, " para R$", nsal, ". Parabéns!")
fimalgoritmo